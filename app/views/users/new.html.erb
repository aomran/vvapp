<h1> Inscription d'artiste
</h1>
<%= form_for @user, html: {class: 'form-horizontal'} do |f| %>
  <div class="control-group">
    <%= f.label "Prénom", :class => "control-label" %>
    <div class="controls"> <%= f.text_field :first_name %> </div>
  </div>

  <div class="control-group">
    <%= f.label "Nom de famille", :class => "control-label" %>
    <div class="controls"> <%= f.text_field :last_name %> </div>
  </div>

  <div class="control-group">
    <%= f.label "Courriel", :class => "control-label" %>
    <div class="controls"> <%= f.text_field :email%> </div>
  </div>

  <div class="control-group">
    <%= f.label "Mot de passe", :class => "control-label" %>
    <div class="controls"> <%= f.text_field :password %> </div>
  </div>

  <div class="control-group">
    <%= f.label "Confirmez mot de passe", :class => "control-label" %>
    <div class="controls"> <%= f.text_field :password_confirmation %> </div>
  </div>

  <div class="control-group">
    <%= f.label "Numéro de téléphone", :class => "control-label" %>
    <div class="controls"> <%= f.text_field :phone_number %> </div>
  </div>

  <div class="control-group">
    <%= f.label "Adresse de rue", :class => "control-label" %>
    <div class="controls"> <%= f.text_field :street_address %> </div>
  </div>

  <div class="control-group">
    <%= f.label "Ville", :class => "control-label" %>
    <div class="controls"> <%= f.text_field :city %> </div>
  </div>

  <div class="control-group">
    <%= f.label "Province", :class => "control-label" %>
    <div class="controls"> <%= f.text_field :province %> </div>
  </div>

  <div class="control-group">
    <%= f.label "Code Postal", :class => "control-label" %>
    <div class="controls"> <%= f.text_field :postal_code %> </div>
  </div>

  <div class="control-group">
    <%= f.label "Pays", :class => "control-label" %>
    <div class="controls"> <%= f.text_field :country %> </div>
  </div>

  <div class="control-group">
    <%= f.label "Femme/Homme radio", :class => "control-label" %>
    <div class="controls"> <%= f.text_field :gender %> </div>
  </div>


  <div class="control-group">
    <div class="controls"> <%= f.submit "Inscrivez-vous" %> </div>
  </div>
</div>
<% end %>