<div class="progress">
  <div class="bar" style="width: 66%;"></div>
</div>
<div class="progress-label">Étape 2 de 3</div>

<h1>Soumission de <%= @submission.user.first_name + " " + @submission.user.last_name%></h1>

<h2>Documents</h2>

  <div class="table-profile">
  <table class="table table-striped">
  <tr>
    <td><%= link_to 'CV', @submission.cv.url %> </td>
  </tr>

  <tr>
    <td><%= link_to 'Démarche', @submission.artist_statement.url %> </td>
  </tr>

  <tr>
    <td><%= link_to 'Projet', @submission.expo_project.url %> </td>
  </tr>

  <tr>
    <td><%= link_to 'Exigences Spéciales', @submission.special_needs.url %> </td>
  </tr>

  <tr>
    <td><%= link_to "Liste d'Images", @submission.image_list.url %> </td>
  </tr>
</table>
</div>

<%= link_to raw('<i class="icon-edit"></i> Editez Soumission'), edit_submission_path(@submission), class: "btn btn-small btn-inverse", id: "link-Edit_Sub"%>

<%= link_to 'Ajoutez Images', submission_images_path(@submission), class: "btn btn-primary btn-large", id: "link-Add_Images"%>