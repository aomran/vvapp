<div class="progress">
  <div class="bar" style="width: 66%;"></div>
</div>
<div class="progress-label">Étape 2 de 3</div>

<h1>Soumission de <%= @submission.user.first_name + " " + @submission.user.last_name%></h1>

<h2>Documents</h2>

  <div class="table-profile">
  <table class="table table-striped">
  <tr>
    <td>CV: </td>
    <td> <%= @submission.cv %></td>
  </tr>

  <tr>
    <td>Démarche: </td>
    <td> <%= @submission.artist_statement %></td>
  </tr>

  <tr>
    <td>Projet: </td>
    <td> <%= @submission.expo_project %></td>
  </tr>

  <tr>
    <td>Exigences Spéciales: </td>
    <td> <%= @submission.special_needs %></td>
  </tr>

  <tr>
    <td>Liste d'Images: </td>
    <td> <%= @submission.image_list %></td>
  </tr>
</table>
</div>

<%= link_to raw('<i class="icon-edit"></i> Editez Soumission'), edit_submission_path(@submission), class: "btn btn-small", id: "link-Edit_Sub"%>

<%= link_to 'Ajoutez Images', submission_images_path(@submission), class: "btn btn-primary btn-large", id: "link-Add_Images"%>