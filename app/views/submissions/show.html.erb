<%= render partial: 'shared/progressbar', locals: { bar_percent: 66, step: "Étape 2 de 3"}%>

<h1>Soumission de <%= @submission.user.first_name + " " + @submission.user.last_name%></h1>

<h2>Documents</h2>

  <div class="table-profile">
  <table class="table table-striped">
  <tr>
    <td><%= link_to 'CV', @submission.cv.url %> </td>
  </tr>

  <tr>
    <td><%= link_to 'Démarche', @submission.artist_statement.url %> </td>
  </tr>

  <tr>
    <td><%= link_to 'Projet', @submission.expo_project.url %> </td>
  </tr>

  <% if @submission.special_needs.file %>
  <tr>
    <td><%= link_to 'Exigences Spéciales', @submission.special_needs.url %> </td>
  </tr>
  <% end %>

  <tr>
    <td><%= link_to "Liste d'Images", @submission.image_list.url %> </td>
  </tr>
</table>
</div>

<%= link_to raw('<i class="icon-edit"></i> Editez Soumission'), edit_submission_path, class: "btn btn-small btn-inverse", id: "link-Edit_Sub"%>

<%= link_to 'Ajoutez Images', submission_images_path, class: "btn btn-primary btn-large", id: "link-Add_Images"%>