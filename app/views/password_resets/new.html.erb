<h1>Mettre à jour votre mot de passe</h1>

<%= form_tag password_resets_path, class: 'form-horizontal'  do %>
  <div class="control-group">
    <%= label_tag :email, 'Courriel',:class => "control-label" %>
    <div class="controls"><%= text_field_tag :email, params[:email] %></div>
  </div>
  <div class="control-group">
    <div class="controls"><%= submit_tag "Réinitialisez", id: 'password-reset-button' %></div>
  </div>
<% end %>